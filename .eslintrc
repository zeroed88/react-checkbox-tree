{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "class-methods-use-this": 0,
    "indent": [0, "space"],
    "no-tabs": 0,
    "react/jsx-indent": [0, "space"],
    "react/jsx-indent-props" : [0, "space"],
    "react/jsx-filename-extension": 0,
    "react/sort-prop-types": [2, {
      "callbacksLast": true,
      "requiredFirst": true
    }]
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.test.config.js"
      }
    }
  }
}
